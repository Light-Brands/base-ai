# Oracle Cloud Infrastructure (OCI) Configuration
# Copy this file to .env.local and fill in your values

# OCI Authentication
OCI_USER_OCID=ocid1.user.oc1..your-user-ocid-here
OCI_TENANCY_OCID=ocid1.tenancy.oc1..your-tenancy-ocid-here
OCI_REGION=us-chicago-1
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# Path to your OCI private key (PEM file)
OCI_PRIVATE_KEY_PATH=./keys/oci_api_key.pem
# Or provide the key content directly (base64 encoded)
# OCI_PRIVATE_KEY_BASE64=

# OCI Compute (for VM deployment)
OCI_COMPARTMENT_OCID=
OCI_AVAILABILITY_DOMAIN=
OCI_SUBNET_OCID=
